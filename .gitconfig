[user]
	name = Sharan Karanth
	email = sharan@karanthconsulting.com
[alias]
    ci = commit
    co = checkout
    st = status
    unstage = reset HEAD --
    unmerged = ls-files --unmerged        
[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    pager = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta
    old = red
    new = green
[color "status"]
    added = green
    changed = yellow bold
    untracked = white
[core]
	editor = /usr/bin/vim
[push]
	default = simple
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[credential]
	helper = 
	helper = /usr/local/bin/git-credential-manager
[credential "https:/github.com-personal"]
	helper = 
	helper = /usr/local/bin/git-credential-manager
[credential "https://dev.azure.com"]
	useHttpPath = true
